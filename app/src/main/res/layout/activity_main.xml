<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="?attr/actionBarTheme"
        app:title="Harshita Pathania"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/main_menu" />

    <GridLayout
        android:id="@+id/grid_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:columnCount="2"
        android:rowCount="3"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Academics Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_column="0"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1">

            <ImageButton
                android:id="@+id/AcadI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/academics_icon"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:background="@null" />

            <TextView
                android:id="@+id/AcadT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Academics"
                android:gravity="center"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Certifications Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_column="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1">

            <ImageButton
                android:id="@+id/CertI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/certifications_icon"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:background="@null" />

            <TextView
                android:id="@+id/CertT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Certifications"
                android:gravity="center"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Hobbies Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_column="0"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1">

            <ImageButton
                android:id="@+id/HobI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/hobbies_icon"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:background="@null" />

            <TextView
                android:id="@+id/HobT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hobbies"
                android:gravity="center"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Projects Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_column="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1">

            <ImageButton
                android:id="@+id/ProI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/projects_icon"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:background="@null" />

            <TextView
                android:id="@+id/ProT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Projects"
                android:gravity="center"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Photo Gallery Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="2"
            android:layout_column="0"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1">

            <ImageButton
                android:id="@+id/PhotoI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/photo_gallery_icon"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:background="@null" />

            <TextView
                android:id="@+id/PhotoT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Photo Gallery"
                android:gravity="center"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Skills Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="2"
            android:layout_column="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1">

            <ImageButton
                android:id="@+id/SkillsI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/skills_icon"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:background="@null" />

            <TextView
                android:id="@+id/SkillsT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skills"
                android:gravity="center"
                android:textSize="16sp" />
        </LinearLayout>
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
